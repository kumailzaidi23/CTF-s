def extract_files(booz):
    search_hex = '9dfff3082a82a0082a'
    jfif_signature = 'FFD8FFE000004A'
    filecount = 0
    i = 0
    content = jfif_signature
    with open(booz, 'r') as f:
        while True:
            f.seek(i)
            byte = f.read(8)
            if byte == search_hex:
                read_text_from_image(content, filecount)
                content = jfif_signature
                filecount += 1
                i += 8
            else:
                f.seek(i)
                byte = f.read(2)
                if byte:
                    content += byte
                    i += 2
                else:
                    read_text_from_image(content, filecount)
                    return
